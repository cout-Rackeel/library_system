<div class="
     flex p-4 flex-col gap-9 
     lg:p-0 lg:w-[100%]">

    <a href="/" class="
      font-autour text-[1.35rem] bg-primary w-32 text-center text-white h-fit mt-8 shadow-lg tracking-wide
      lg:w-50 lg:text-2xl lg:absolute lg:z-10 lg:inset-10
      ">Libby</a>

    <span class="lg:hidden">
        <h1 class="
        text-3xl font-bold font-outfit pl-1
        lg:pl-0 lg:text-4xl lg:font-extrabold lg:mb-10 lg:absolute lg:z-10
        ">Login</h1>
    </span>
    
    <p class="
    font-ovo font-light text-2xl tracking-wide w-64 pl-1
    sm:text-3xl sm:w-full
    md:text-3xl md:w-full
    lg:pl-0 lg:text-5xl lg:leading-18 lg:absolute lg:z-10 lg:top-1/5 lg:left-10 lg:w-1/4
    xl:text-6xl xl:w-1/4
    ">Join our online library community</p>

    <div class="
    bg-[url(/images/tree_swing.svg)] h-56 bg-contain bg-center bg-no-repeat opacity-80  
    lg:size-lvh lg:bg-fill lg:absolute lg:z-0 lg:inset-0 lg:w-full"></div>

    <div class="lg:h-[550px] lg:w-[360px]
    lg:absolute lg:z-10 lg:top-1/2 lg:left-1/2 lg:transform lg:-translate-x-1/2 lg:-translate-y-1/2  lg:rounded-[1.25rem] lg:bg-white/60 lg:border lg:border-black lg:p-10
    ">
        <form action="/login" method="post" class="flex flex-col gap-4 h-full lg:gap-6">
            <span class="hidden lg:block">
                <h1 class="text-4xl font-extrabold font-outfit mb-8">Login</h1>
            </span>
            
            <div>
                <label for="email" class="input-label">Email</label>
                <input type="email" name="email" id="email" placeholder="Email" value="<%=data.email%>" class="input-btn" required>
            </div>

            <div>
                <label for="password" class="input-label">Password</label>
                <input type="password" name="password" id="password" value="" placeholder="Password" class="input-btn" required> 
                <span class="font-inter text-sm text-red-500">
                    <% if(error != null) {%>
                            <% if(error.status != null) {%>
                            <span class="text-red-600"><%= error.message%></span>
                            <%}%>
                    <%}%>
                </span>
            </div>

            <p class="font-inter font-light text-sm text-right hover:cursor-pointer my-4 lg:my-0">Forget Password?</p>
            
            <% if(error != null ) {%>
                <% if(error.status != 429) {%>
                    <button type="submit" class="btn-1 p-3">Submit</button>
                <%}%>
            <%}%>

            <p class="font-inter font-light text-sm text-center my-4">No account? <a href="/signup" class="text-primary font-semibold  hover:cursor-pointer">Register here</a></p>
        </form>
    </div>


</div>



