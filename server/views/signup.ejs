<div class="flex flex-col px-4 py-4 gap-4">
    <!-- Display Child -->
     <div class="flex flex-row items-end border-b-1 border-bottom border-gray-300 pb-4">
        <!-- Left Side -->
        <div class="flex flex-col space-y-6">
            <h2 class="
            font-autour text-[1.35rem] bg-primary w-32 text-center text-white h-fit mt-8 shadow-lg tracking-wide
            lg:w-50 lg:text-2xl lg:absolute lg:z-10 lg:inset-10
            ">Libby</h2>

            <span class="lg:hidden">
                <h1 class="
                text-3xl font-bold font-outfit pl-1
                lg:pl-0 lg:text-4xl lg:font-extrabold lg:mb-10 lg:absolute lg:z-10
                ">Sign Up</h1>
            </span>

            <p class="
            font-ovo font-light text-xl tracking-wide w-full pl-1
            sm:text-3xl sm:w-full
            md:text-3xl md:w-full
            lg:pl-0 lg:text-5xl lg:leading-18 lg:absolute lg:z-10 lg:top-1/5 lg:left-10 lg:w-1/4
            xl:text-6xl xl:w-1/4
            ">Join our online library community</p>
        </div>

        <!-- Right Side -->
        <div class="">
            <div class="w-30 h-42 p-2 p-0 rounded-sm border border-gray-300 shadow-sm">
               <div class="
                    bg-[url(/images/book_cover.jpg)] h-full w-full bg-contain bg-center bg-no-repeat
                    ">
                </div> 
            </div>
        </div>

     </div>

    <!-- Form Child -->
     <div class="lg:h-[550px] lg:w-[360px]
    lg:absolute lg:z-10 lg:top-1/2 lg:left-1/2 lg:transform lg:-translate-x-1/2 lg:-translate-y-1/2  lg:rounded-[1.25rem] lg:bg-white/60 lg:border lg:border-black lg:p-10
    ">

    <!-- <div class="
    bg-[url(/images/girl_read.svg)] h-56 bg-contain bg-center bg-no-repeat opacity-80  
    lg:size-lvh lg:bg-fill lg:absolute lg:z-0 lg:inset-0 lg:w-full"></div> -->

        <form action="/signup" method="post" class="flex flex-col gap-6 h-full mt-6 lg:gap-6">

            <span class="hidden lg:block">
                <h1 class="text-4xl font-extrabold font-outfit mb-8">Sign Up</h1>
                <p class="font-inter font-light text-sm text-center my-4">Already have an account? <a href="/login" class="text-primary font-semibold  hover:cursor-pointer">Login here</a></p>
            </span>

            <div class="flex flex-col gap-6 space-y-0 md:flex-row md:space-y-4">
                <div>
                    <label for="fname" class="font-inter font-bold hidden lg:block">First Name</label>
                    <input type="fname" name="fname" id="fname" placeholder="First Name" value="" class="font-inter mt-2 border border-gray-300 w-full px-2 py-3 rounded-sm bg-white">
                    <span class="font-inter text-sm text-red-500">
                        <% if(data != null) {%>
                                <% if(data.status != null) {%>
                                <span class="text-red-600"><%= data.message%></span>
                                <%}%>
                        <%}%>
                    </span>
                </div>

                <div>
                    <label for="lname" class="font-inter font-bold hidden lg:block">Last Name</label>
                    <input type="lname" name="lname" id="lname" placeholder="Last Name" value="" class="font-inter mt-2 border border-gray-300 w-full px-2 py-3 rounded-sm bg-white">
                    <span class="font-inter text-sm text-red-500">
                        <% if(data != null) {%>
                                <% if(data.status != null) {%>
                                <span class="text-red-600"><%= data.message%></span>
                                <%}%>
                        <%}%>
                    </span>
                </div>

            </div>
            
            <div>
                <label for="email" class="font-inter font-bold hidden lg:block">Email</label>
                <input type="email" name="email" id="email" placeholder="Email" value="" class="font-inter mt-2 border border-gray-300 w-full px-2 py-3 rounded-sm bg-white">
                <span class="font-inter text-sm text-red-500">
                    <% if(data != null) {%>
                            <% if(data.status != null) {%>
                            <span class="text-red-600"><%= data.message%></span>
                            <%}%>
                    <%}%>
                </span>
            </div>

            <div>
                <label for="password" class="font-inter font-bold hidden lg:block">Password</label>
                <input type="password" name="password" id="password" value="" placeholder="Password" class="font-inter mt-2 border border-gray-300 w-full px-2 py-3 rounded-sm bg-white"> 
                <span class="font-inter text-sm text-red-500">
                    <% if(data != null) {%>
                            <% if(data.status != null) {%>
                            <span class="text-red-600"><%= data.message%></span>
                            <%}%>
                    <%}%>
                </span>
            </div>

            <% if(data != null ) {%>
                <% if(data.status != 429) {%>
                    <button type="submit" class="w-full rounded-sm p-3 bg-accent flex-end text-white font-inter hover:cursor-pointer mt-5">Create Account</button>
                <%}%>
            <%}%>

            <p class="font-inter font-light text-sm text-center my-4">Already have an account? <a href="/login" class="text-primary font-semibold  hover:cursor-pointer">Login here</a></p>
        </form>
    </div>

</div>